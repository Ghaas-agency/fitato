<form action="/partners/search" method="POST" class="partners-search-form">
  <div>
    <select name="activity" id="partners-select-activity">
      {{#each data.activities}}
      <option value="{{this.id}}">{{this.text}}</option>
      {{/each}}
    </select>
  </div>
  <div>
    <select name="location" id="partners-select-location">
      {{#each data.locations}}
      <option value="{{this.id}}">{{this.text}}</option>
      {{/each}}
    </select>
  </div>
  <div>
    <button type="submit" class="button">Go</button>
  </div>
</form>